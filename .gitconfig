[user]
    email = hchen.robotics@gmail.com
    name = Harrison Chen
[alias]
    a = add
    c = commit
    ca = commit --amend
    can = commit --amend --no-edit
    co = checkout
    f = fetch
    ps = push
    psf = push --force-with-lease
    pl = pull
    plo = "!f() { git fetch $(git remote) $1:$1; } ; f"
    fre = "!f() { git plo $1 && git rebase $1; } ; f"
    s = status
    su = submodule update --init --recursive
    sw = switch
    swc = switch --create
    swr = switch --recurse-submodules

    aliases = config --get-regexp ^alias
    dag = log --branches --remotes --tags --graph --decorate --oneline
    stash-all = stash --include-untracked
    uncommit = reset --soft HEAD~1
    unstage = restore --staged
[commit]
    verbose = true
[core]
    editor = code --wait
    excludesFile = ~/.gitignore_global
[fetch]
    prune = true
[help]
    autoCorrect = immediate
[init]
    defaultBranch = main
[pull]
    ff = only
[push]
    autoSetupRemote = true
[status]
    branch = true
    short = true
